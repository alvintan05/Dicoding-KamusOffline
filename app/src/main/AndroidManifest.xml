<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alvin.kamusoffline">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_dictionary_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:theme="@style/NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_eng" />
        </activity>
        <activity
            android:name=".IndoEnglishActivity"
            android:theme="@style/NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_eng" />
        </activity>
        <activity android:name=".AllEnglishWordActivity" />
        <activity android:name=".AllIndonesiaActivity" />
        <activity android:name=".DetailActivity">

        </activity>
    </application>

</manifest>